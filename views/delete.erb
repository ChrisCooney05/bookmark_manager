<h1> Your Bookmarks </h1>
<ul>
  <% @bookmarks.each do |bookmark| %>
      <a href="<%= bookmark.url %>">
      <li><%= bookmark.id%>: <%= bookmark.title %></li></a>
  <% end %>
</ul>
<form action='/confirm-delete' method='POST'>
  <input type='text' name='delete' placeholder='bookmark to delete'>
  <input type='submit' value='Delete bookmark'>
</form>